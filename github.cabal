test-suite github-test
  default-language: Haskell2010
  type: exitcode-stdio-1.0
  hs-source-dirs: spec
  other-modules:
    Github.SearchSpec
    Github.UsersSpec
    Github.OrganizationsSpec
  main-is: Spec.hs
  ghc-options: -Wall
  build-depends: base >= 4.0 && < 5.0,
                 base-compat,
                 github,
                 file-embed,
                 hspec
  if flag(aeson-compat)
    build-depends: aeson-compat >= 0.3.0.0 && <0.4
  else
